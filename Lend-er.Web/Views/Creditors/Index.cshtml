@model IEnumerable<Creditors>

@{
    Layout = "~/Views/Shared/dashboard.cshtml";
    ViewBag.Title = "Home Page";
}

<!-- Breadcrumb-->
<div class="container-fluid">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="index" asp-controller="Home">Home</a></li>
        <li class="breadcrumb-item active">@ViewBag.Title</li>
    </ul>
</div>


<a asp-action="create" asp-controller="Creditors" class="btn btn-primary m-4"> Add a Creditor</a>
<div class="col-lg-12">
    <div class="block">
        <div class="title"><strong>All Creditors</strong></div>
        <div class="table-responsive">
            <table class="table table-striped table-sm table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Amount</th>
                        <th>Date Owed</th>
                        <th>Due Date</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model == null)
                    {
                        <tr>No Creditors</tr>
                    }
                    else
                    {
                        foreach (var creditor in Model)
                        {
                            <tr>
                                <td>1</td>
                                <td><a asp-action="details" asp-controller="Creditors" asp-route-id="@creditor.Id">@creditor.FirstName</a></td>
                                <td>@creditor.LastName</td>
                                <td><span>&#8358</span>@creditor.MoneyOwed</td>
                                <td>@creditor.DateOwed.Date</td>
                                <td>@creditor.DueDate.Date</td>
                                <td>
                                    <a asp-action="edit" asp-controller="Creditors" asp-route-id="@creditor.Id" class="btn btn-primary">edit</a>
                                    <a asp-action="Delete" asp-controller="Creditors" asp-route-id="@creditor.Id" class="btn btn-danger" id="btn">delete</a>
                                    @if (creditor.status == false)
                                    {
                                        <a asp-action="claim" asp-controller="Creditors" asp-route-id="@creditor.Id" class="btn btn-success" id="claim">claim</a>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{ 
    <script>
        document.getElementById("btnjj").addEventListener('click', function () {
            swal("Delete Successful!", "one item deleted!", "success");
        });

        document.getElementById("claim").addEventListener('click', function () {
            swal("Success!", "one dept has been collected!", "success");
        });
    </script>
}