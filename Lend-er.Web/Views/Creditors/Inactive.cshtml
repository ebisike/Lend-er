@model IEnumerable<Lend_er.Entities.Creditors>

@{
    Layout = "~/Views/Shared/dashboard.cshtml";
    ViewBag.Title = "Inactive creditors";
}


<!-- Breadcrumb-->
<div class="container-fluid">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="index" asp-controller="Home">Home</a></li>
        <li class="breadcrumb-item active">@ViewBag.Title</li>
    </ul>
</div>


<div class="col-lg-12">
    <div class="block">
        <div class="title"><strong>All Creditors</strong></div>
        <div class="table-responsive">
            <table class="table table-striped table-sm table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Amount</th>
                        <th>Date Owed</th>
                        <th>Due Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var creditor in Model)
                    {
                        <tr>
                            <td>1</td>
                            <td><a asp-action="details" asp-controller="Creditors" asp-route-id="@creditor.Id">@creditor.FirstName</a></td>
                            <td>@creditor.LastName</td>
                            <td><span>&#8358</span>@creditor.MoneyOwed</td>
                            <td>@creditor.DateOwed.Date.ToLongDateString()</td>
                            <td>@creditor.DueDate.Date.ToLongDateString()</td>
                            <td>
                                <a asp-action="edit" asp-controller="Creditors" asp-route-id="@creditor.Id" class="btn btn-primary">edit</a>
                                <a asp-action="Delete" asp-controller="Creditors" asp-route-id="@creditor.Id" class="btn btn-danger" id="btn">delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        document.getElementById("btn").addEventListener('click', function () {
            swal("Delete Successful!", "one item deleted!", "success");
        });        
    </script>
}